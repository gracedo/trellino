<div class="row">
  <div class="col-md-4 col-md-offset-1">
    
    <h1>Sign Up</h1>
    <br>

    <form action="<%= users_url %>" method="POST" role="form">
      <div class="form-group">
      	<label for="email">Email</label>
      	<input id="email" type="text" name="user[email]">
      </div>
	
      <div class="form-group">
      	<label for="password">Password</label>
      	<input id="password" type="password" name="user[password]">
      </div>
  
      <button type="submit" class="sign-in btn btn-default">Sign Up</button>
    </form>

    <br>
    <a href="<%= new_session_url %>">Back to Login</a>
  </div>
</div>