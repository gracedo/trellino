<div class="row">
  <div class="col-md-4 col-md-offset-1">
    
    <h1>Sign In</h1>
    <br>
    
    <form action="<%= session_url %>" method="POST" role="form" class="form-horizontal">

      <div class="form-group">
      	<label for="email" class="col-sm-2 control-label">Email</label>
         <div class="col-sm-6">
        	<input id="email" class="form-control" type="text" name="user[email]">
        </div>
      </div>

      <div class="form-group">
      	<label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-6">
          <input id="password" class="form-control" type="password" name="user[password]">
        </div>
      </div>

      <!-- <input id="logout" type='submit' value='Login'> -->
      <button type="submit" class="sign-in btn btn-success">Sign In</button>
    </form>
    
    <br>
    <a href="<%= new_user_url %>">New to Trellino?</a>
  </div>
</div>