<div class="list-container col-md-3 clearfix" data-id="<%= list.id %>" data-rank="<%= list.escape("rank") %> ">

  <h4 class="list-header"><%= list.escape("title") %> <a href="#" data-toggle="modal" data-target=".delete-list-modal"><button class="remove-list-button btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button></a></h4>
  
  <div class="modal fade delete-list-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <center>
          <h4 class="modal-title">Are you sure you want to delete this list?</h4><br>
          <button class="remove-list btn btn-danger">Delete</button> <button class="btn btn-default" data-dismiss="modal">Cancel</button>
        </center>
      </div>
    </div>
  </div>

    <div class="cards-list clearfix">
    </div>
 
   <div class="add-card-container">
   
     <a href="#" class="add-card-link">
       <div class="add-card-link-container" data-list-id="<%= list.id %>">Add a card...</div>
     </a>
    
    <div class="new-card-form" id="<%= list.id %>">
    </div>
   
  </div>
</div>