<div class="row">
  <div class="board-title">
    <h2><%= board.escape("title") %> 
      <div class="btn-group">
        <button type="button" class="btn btn-transparent dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-cog"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#" data-toggle="modal" data-target=".edit-title-modal">Edit board title</a></li>
          <li><a href="#" data-toggle="modal" data-target=".members-modal">Board members</a></li>
          <li class="divider"></li>
          <li><a href="#" class="remove-board"><span class="glyphicon glyphicon-trash" style="float:left; margin-right:10px"></span>Delete board</a></li>
        </ul>
      </div>
    </h2>
  </div>
  
  <div class="modal fade edit-title-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Edit Board Title</h4>
        </div>
  
        <form role="form">
          <div class="form-group edit-board-form">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="board[title]" value="<%= board.escape("title") %>" placeholder="Untitled Board" id="title">
          </div>

          <button type="submit" class="edit-board-title btn btn-success">Submit</button>
        </form>
      </div>
    </div>
  </div>
    
  <div class="members">
    <div class="modal fade members-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Board Members</h4>
          </div>
    
          <ul class="board-members" align="left">
          </ul>

          <button class="new-member btn btn-default btn-sm">Add Member</button>
          <div class="new-member-form">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
<div class="row clearfix all-lists-container">
  <div class="lists-container">
  </div>

  <div class="new-list-container">
    <a href="#" class="add-list-link">
      <div class="add-list-link-container">Add a list...</div>
    </a>
  
    <div class="new-list-form">
    </div>
  </div>
  
</div>